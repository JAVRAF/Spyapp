{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if isAdded == false %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" value="Add country"/>
    {{ form_end(form) }}
    <button onclick="window.location.href = '{{ path('app_country_list') }}'">Back to country list</button>
    {% else %}
    <h1>The country {{ country.name }} has been added! âœ…</h1>
        <button onclick="window.location.href = '{{ path('app_country_add') }}'">Add another country</button>
        <button onclick="window.location.href = '{{ path('app_country_list') }}'">Back to country list</button>
    {% endif %}
</div>
{% endblock %}
