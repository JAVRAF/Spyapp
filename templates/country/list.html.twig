{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        table, tr, th, td {
            border: 1px solid black;
        }

        button {
        }

    </style>

    <div class="example-wrapper">
        <h1>Countries :</h1>
        {% if countriesCount > 0  %}
            <table>
                <tr>
                    <th>name</th>
                    <th></th>
                    <th></th>
                </tr>
                {% for country in countries %}
                    <tr>
                        <td>{{ country.name }}</td>
                        <td><button onclick="window.location.href = 'http://localhost/country/edit/{{ country.id }}'">Edit</button></td>
                        <td><button onclick="window.location.href = 'http://localhost/country/delete/{{ country.id }}'">Delete</button></td>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            <h2>There is no countries</h2>
        {% endif %}
        <button onclick="window.location.href = 'http://localhost/country/add'">Add a new country</button>
    </div>
{% endblock %}
