{% extends 'base.html.twig' %}

{% block body %}
    <div class="example-wrapper">
        <h1>Countries :</h1>
        {% if countriesCount > 0 %}
            <table>
                <tr>
                    <th>name</th>
                    <th></th>
                    <th></th>
                </tr>
                {% for country in pagination %}
                    <tr>
                        <td>{{ country.name }}</td>
                        <td>
                            <button class="tablebutton" onclick="window.location.href = '{{ path('app_country_edit', {'id': country.id}) }}'">
                                Edit
                            </button>
                        </td>
                        <td>
                            <button class="tablebutton" onclick="window.location.href = '{{ path('app_country_delete', {'id': country.id}) }}'">
                                Delete
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            <div>
                {{ knp_pagination_render(pagination) }}
            </div>
        {% else %}
            <h2>There is no countries</h2>
        {% endif %}
        <button onclick="window.location.href = '{{ path('app_country_add') }}'">Add a new country</button>
    </div>
{% endblock %}
