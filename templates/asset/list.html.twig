{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

        table, tr, th, td {
            border: 1px solid black;
        }

        button {
        }

    </style>

    <div class="example-wrapper">
        <h1>Assets :</h1>
        {% if assetsCount > 0  %}
            <table>
                <tr>
                    <th>name</th>
                    <th></th>
                    <th></th>
                </tr>
                {% for asset in pagination %}
                    <tr>
                        <td>{{ asset.name }}, {{ asset.surname }} </td>
                        <td><button onclick="window.location.href = '{{path('app_asset_edit', {'id': asset.id})}}'">Edit</button></td>
                        <td><button onclick="window.location.href = '{{path('app_asset_delete', {'id': asset.id})}}'">Delete</button></td>
                    </tr>
                {% endfor %}
            </table>
            <div>
                {{ knp_pagination_render(pagination) }}
            </div>
        {% else %}
            <h2>There is no assets</h2>
        {% endif %}
        <button onclick="window.location.href = '{{path('app_asset_add')}}'">Add a new asset</button>
    </div>
{% endblock %}
