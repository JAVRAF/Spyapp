{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if isAdded == false %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit" value="Add asset"/>
    <button onclick="window.location.href = 'http://localhost/asset/'">Back to asset list</button>
    {{ form_end(form) }}
    {% else %}
    <h1>The asset {{ asset.name }}, {{ asset.surname }} has been added! âœ…</h1>
        <button onclick="window.location.href = 'http://localhost/asset/add'">Add another asset</button>
        <button onclick="window.location.href = 'http://localhost/asset/'">Back to asset list</button>
    {% endif %}
</div>
{% endblock %}
