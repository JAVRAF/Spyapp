{% extends 'base.html.twig' %}

{% block body %}
    <div class="example-wrapper">
        {% if isedited == false %}
            <h1>Edit mission {{ mission.title }}</h1>
            {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <input class="button" type="submit" value="edit mission"/>
            {{ form_end(form) }}
            <button onclick="window.location.href = '{{ path('app_mission_list') }}'">Back to mission list</button>
        {% else %}
            <h1>The mission {{ mission.title }} has been edited! âœ…</h1>
            <button onclick="window.location.href = '{{ path('app_mission_list') }}'">Back to mission list</button>
        {% endif %}
    </div>
{% endblock %}
