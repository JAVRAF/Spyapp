{% extends 'base.html.twig' %}
{% block body %}
    <div class="example-wrapper">
        <h1>Missions :</h1>
        {% if missionsCount > 0 %}
            <table>
                <tr>
                    <th>name</th>
                    <th></th>
                    <th></th>
                </tr>
                {% for mission in pagination %}
                    <tr>
                        <td>{{ mission.title }}</td>
                        <td>
                            <button class="tablebutton"
                                    onclick="window.location.href = '{{ path('app_mission_edit', {'id': mission.id}) }}'">
                                Edit
                            </button>
                        </td>
                        <td>
                            <button class="tablebutton"
                                    onclick="window.location.href = '{{ path('app_mission_delete', {'id': mission.id}) }}'">
                                Delete
                            </button>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            <div>
                {{ knp_pagination_render(pagination) }}
            </div>
        {% else %}
            <h2>There is no missions</h2>
        {% endif %}
        <button onclick="window.location.href = '{{ path('app_mission_add') }}'">Add a new mission</button>
    </div>
{% endblock %}
