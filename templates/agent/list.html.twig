{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

        table, tr, th, td {
            border: 1px solid black;
        }
    </style>
    <div class="example-wrapper">
        <h1>Agents :</h1>
        {% if agentsCount > 0 %}
            <table>
                <tr>
                    <th>Name</th>
                    <th></th>
                    <th></th>
                </tr>
                {% for agent in pagination %}
                    <tr>
                        <td>{% if agent.name is same as ('47') %} Agent 47 {% else %} {{ agent.name }}, {{ agent.surname }} {% endif %}</td>
                        <td><button onclick="window.location.href = '{{path('app_agent_edit', {'id': agent.id})}}'">Edit</button></td>
                        <td><button onclick="window.location.href = '{{path('app_agent_delete', {'id': agent.id})}}'">Delete</button></td>
                    </tr>
                {% endfor %}
            </table>
            <div>
                {{ knp_pagination_render(pagination) }}
            </div>
        {% else %}
            <h2>There is no agents</h2>
        {% endif %}
        <button onclick="window.location.href = '{{ path('app_agent_add') }}'">Add a new agent</button>
    </div>
{% endblock %}
